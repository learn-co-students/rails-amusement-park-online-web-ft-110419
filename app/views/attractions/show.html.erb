<% if @user.admin? %>
    <%= link_to "Edit Attraction", edit_attraction_path %>


<% elsif !@user.admin? %>
    <%= form_tag rides_path, :method => "post" do %>
        <input type="hidden" name="ride[user_id]" value="<%= session[:user_id] %>">
        <input type="hidden" name="ride[attraction_id]" value="<%= @attraction.id %>">
        <%= button_tag "Go on this ride" %>
    <% end %>
<% end %>

